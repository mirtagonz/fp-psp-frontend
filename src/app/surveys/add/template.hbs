<div >
  <div class="col-md-8 col-md-offset-2">
    <div class="panel fp-form-container">
      <div class="panel-heading">
        <div >
          <h1>Survey</h1>
        </div>
        <hr>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <form data-toggle="validator" role="form" class="form-vertical" id="form">
              <div class="form-group">
                <input value="{{survey.title}}" type="text" class="form-control" name="title" value="" placeholder="Surveys's title" required>
              </div>
              <div class="form-group">
                <input value="{{survey.description}}" type="text" class="form-control" name="description" placeholder="Short description"
                  required>
              </div>
              <div class="form-group">
                <div class="panel panel-default" onLoad="text_editor();">
                  <div class="panel-heading">
                    <ul class="nav nav-pills" id="heading">
                      <li>JSON Schema *</li>
                    </ul>
                  </div>
                  <textarea id="schema-editor" name="survey_schema"  class="form-control"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="panel panel-default" onLoad="text_editor();">
                  <div class="panel-heading">
                    <ul class="nav nav-pills" id="heading">
                      <li>JSON UI Schema *</li>
                    </ul>
                  </div>
                  <textarea id="schema-ui-editor" name="survey_ui_schema" class="form-control"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <button type="submit" name="register-submit" id="submit" tabindex="4" class="btn" value="Save">SAVE</button>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <a href="#surveys" id="cancel" class="" tabindex="5">Cancel</a>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
